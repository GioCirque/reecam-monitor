{
  "name": "ipcams",
  "version": "1.0.0",
  "description": "A monitor for interesting IP cameras",
  "author": "Gio Palacino <gio@palacino.net>",
  "license": "CC0-1.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "postinstall": "yarn unlink; yarn link"
  },
  "bin": {
    "ipcams": "./src/index.ts"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "commander": "^8.3.0",
    "dotenv": "^10.0.0",
    "gifencoder": "^2.0.1",
    "inquirer": "^8.2.0",
    "jimp": "^0.16.1"
  },
  "devDependencies": {
    "@types/gifencoder": "^2.0.1",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^16.0.2",
    "eslint": "^7.32.0",
    "jest": "^27.4.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "types-package-json": "^2.0.39",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageDirectory": ".jest/coverage",
    "collectCoverageFrom": [
      "./src/**/*.{ts,tsx}",
      "!./src/**/*.d.{ts,tsx}",
      "!./src/**/*.types.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/amplify/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/.*"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/_mock.*",
      "/dist/"
    ],
    "setupFiles": [],
    "testEnvironment": "node"
  }
}
