{
  "name": "ipcams",
  "version": "1.0.0",
  "description": "A monitor and web portal for interesting IP cameras",
  "author": "Gio Palacino <gio@palacino.net>",
  "license": "CC0-1.0",
  "scripts": {
    "docker": "yarn build && yarn docker:build",
    "build": "rm -rf ./build && webpack && yarn --cwd ./src/app build && yarn move:app",
    "serve": "ts-node ./src/server/serve.ts",
    "start": "yarn build && docker compose up --build --detach",
    "move:app": "mkdir -p ./build/app/build/ && mv -f ./src/app/build ./build/app/",
    "docker:push": "docker push giocirque/reecam-web:latest; docker push giocirque/reecam-web:$(git rev-parse --short HEAD)",
    "docker:build": "yarn build && docker build --pull --rm -f Dockerfile -t giocirque/reecam-web:latest -t giocirque/reecam-web:$(git rev-parse --short HEAD) ."
  },
  "bin": {
    "ipcams": "./src/cli/index.ts",
    "camserve": "./src/server/serve.ts"
  },
  "dependencies": {
    "axios": "0.24.0",
    "commander": "8.3.0",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "date-fns": "2.27.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "gifencoder": "2.0.1",
    "inquirer": "8.2.0",
    "jimp": "0.16.1",
    "mime-db": "1.51.0",
    "uuid": "8.3.2",
    "webpack": "5.65.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/gifencoder": "2.0.1",
    "@types/inquirer": "8.1.3",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "@types/uuid": "8.3.3",
    "@types/webpack": "5.28.0",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "eslint": "8.4.0",
    "fork-ts-checker-webpack-plugin": "6.5.0",
    "jest": "26.6.3",
    "ts-jest": "26.5.5",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "types-package-json": "2.0.39",
    "typescript": "4.4.4",
    "webpack-cli": "4.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageDirectory": ".jest/coverage",
    "collectCoverageFrom": [
      "./src/**/*.{ts,tsx}",
      "!./src/**/*.d.{ts,tsx}",
      "!./src/**/*.types.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/amplify/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/.*"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/_mock.*",
      "/dist/"
    ],
    "setupFiles": [],
    "testEnvironment": "node"
  }
}
