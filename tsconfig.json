{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "./package.json"
  ],
  "exclude": [
    "@types/*",
    "node_modules",
    "src/app",
    "**/*.test.ts"
  ]
}